#!/usr/bin/env ruby

require 'optparse'
require_relative '../lib/honcho'

options = {
  config: 'honcho.yml'
}

OptionParser.new do |opts|
  opts.banner = 'Usage: honcho [options]'

  opts.on('-c', '--config path', 'specify config file path') do |path|
    options[:config] = path
  end
end.parse!

Honcho::Runner.new(options).run
